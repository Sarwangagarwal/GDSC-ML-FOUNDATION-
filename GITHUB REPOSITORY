# Import necessary libraries
import pandas as pd
import matplotlib.pyplot as plt

# Load the dataset
df = pd.read_csv("grades.csv")

# Display basic statistics of the dataset
print(df.describe())

# Calculate average grades for each subject
average_math = df['Math_Grade'].mean()
average_english = df['English_Grade'].mean()
average_science = df['Science_Grade'].mean()
average_social = df[ 'Social_Grade'].mean()

# Plot bar chart for average grades
subjects = ['Math', 'English', 'Science' , 'social']
averages = [average_math, average_english, average_science , average_social] 
  # plot bar print...
plt.bar(subjects, averages, color=['blue', 'green', 'orange' , 'purple'])
plt.title('Average Grades by Subject')
plt.xlabel('Subjects')
plt.ylabel('Average Grade')
plt.show()
